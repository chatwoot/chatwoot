# FassZap Environment Configuration for EasyPanel

# ==============================================
# CORE CONFIGURATION (REQUIRED)
# ==============================================

# Secret key for Rails application (REQUIRED)
SECRET_KEY_BASE=cb26527b7f0b99738ed6ac1a65992340

# Frontend URL where FassZap will be accessible (REQUIRED)
FRONTEND_URL=https://your-domain.com

# Default locale
DEFAULT_LOCALE=pt_BR

# SSL Configuration
FORCE_SSL=false

# Account signup
ENABLE_ACCOUNT_SIGNUP=true

# ==============================================
# ENTERPRISE CONFIGURATION (DO NOT CHANGE)
# ==============================================

# FassZap runs in enterprise mode by default
CW_EDITION=enterprise
INSTALLATION_PRICING_PLAN=enterprise
INSTALLATION_PRICING_PLAN_QUANTITY=10

# ==============================================
# DATABASE CONFIGURATION (REQUIRED)
# ==============================================

# PostgreSQL Configuration
POSTGRES_DATABASE=fasszap_production
POSTGRES_HOST=db
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# ==============================================
# REDIS CONFIGURATION (REQUIRED)
# ==============================================

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_OPENSSL_VERIFY_MODE=none

# ==============================================
# NOTIFICATIONS (KEEP AS IS FOR PUSH NOTIFICATIONS)
# ==============================================

# Hub URL for push notifications (DO NOT CHANGE)
CHATWOOT_HUB_URL=https://hub.2.chatwoot.com

# Telemetry for notifications only (DO NOT CHANGE)
DISABLE_TELEMETRY=false

# ==============================================
# FABIANA AI CONFIGURATION (OPTIONAL)
# ==============================================

# AI Provider Selection (openai, chatgpt, groq)
FABIANA_AI_PROVIDER=openai

# OpenAI Configuration
FABIANA_OPEN_AI_API_KEY=sk-your_openai_api_key_here
FABIANA_OPEN_AI_MODEL=gpt-4o-mini

# ChatGPT Configuration
FABIANA_CHATGPT_API_KEY=sk-your_chatgpt_api_key_here
FABIANA_CHATGPT_MODEL=gpt-4

# Groq Configuration (Ultra-fast AI)
FABIANA_GROQ_API_KEY=gsk_your_groq_api_key_here
FABIANA_GROQ_MODEL=llama3-8b-8192

# ==============================================
# RAILS/NODE CONFIGURATION
# ==============================================

# Environment
RAILS_ENV=production
NODE_ENV=production

# Threading
RAILS_MAX_THREADS=5

# Sidekiq
SIDEKIQ_CONCURRENCY=25

# Installation environment
INSTALLATION_ENV=docker

# Proxy configuration
TRUSTED_PROXIES=*
