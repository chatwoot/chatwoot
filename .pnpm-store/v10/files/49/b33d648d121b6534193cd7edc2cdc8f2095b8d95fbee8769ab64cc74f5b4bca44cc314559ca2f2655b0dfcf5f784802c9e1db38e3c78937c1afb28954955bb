    top: 2px;
    left: 2px;
    transform-origin: center;
    animation-name: pulse;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-delay: .25s;
}

@keyframes pulsetext {
    from {
        opacity: .75; }
    25% {
        opacity: .5; }
    50% {
        opacity: .75; }
    75% {
        opacity: .5; }
    to {
        opacity: .75;
    }
}

@keyframes pulse {
    from {
        opacity: 1;
        transform: scale(1.6); }
    50% {
        opacity: .5;
        transform: scale(2.5); }
    to {
        opacity: 0;
        transform: scale(3.5);
    }
