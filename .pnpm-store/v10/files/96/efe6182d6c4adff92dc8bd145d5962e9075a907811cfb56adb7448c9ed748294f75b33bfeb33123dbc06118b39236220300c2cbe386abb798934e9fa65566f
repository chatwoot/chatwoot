'use strict';

/**
* Escape a regular expression string or pattern.
*
* @module @stdlib/utils-escape-regexp-string
*
* @example
* var rescape = require( '@stdlib/utils-escape-regexp-string' );
*
* var str = rescape( '[A-Z]*' );
* // returns '\\[A\\-Z\\]\\*'
*/

// MODULES //

var rescape = require( './main.js' );


// EXPORTS //

module.exports = rescape;
