# BlazeChat Production Environment Variables
# Copy this file to .env and configure the values

# ===========================================
# Application Settings
# ===========================================
SECRET_KEY_BASE=your_secret_key_base_here
FRONTEND_URL=https://your-blazechat-domain.com
RAILS_ENV=production

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=blazechat_production
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_secure_postgres_password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password

# ===========================================
# Email Configuration (SMTP)
# ===========================================
MAILER_SENDER_EMAIL=noreply@your-domain.com
SMTP_ADDRESS=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_DOMAIN=your-domain.com
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# ===========================================
# Storage Configuration
# ===========================================
# For local storage (default)
ACTIVE_STORAGE_SERVICE=local

# For AWS S3
# ACTIVE_STORAGE_SERVICE=amazon
# S3_BUCKET_NAME=your-bucket-name
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# ===========================================
# Optional: Integrations
# ===========================================
# Facebook Channel
# FB_APP_ID=
# FB_APP_SECRET=
# FB_VERIFY_TOKEN=

# WhatsApp Channel
# WHATSAPP_APP_ID=
# WHATSAPP_APP_SECRET=

# ===========================================
# Optional: Captain AI
# ===========================================
# CAPTAIN_OPEN_AI_API_KEY=
# CAPTAIN_OPEN_AI_MODEL=gpt-4o-mini
