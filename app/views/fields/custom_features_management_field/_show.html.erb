<%
  # Get selected features and metadata
  selected_features = field.selected_features
  features_metadata = field.features_with_metadata.index_by { |f| f['name'] }
%>

<div class="feature-container">
  <% if selected_features.any? %>
    <div class="space-y-3">
      <% selected_features.each do |feature_name| %>
        <% feature_meta = features_metadata[feature_name] || {} %>
        <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg shadow-sm outline outline-1 outline-green-200">
          <div class="flex-1">
            <span class="text-sm font-medium text-slate-700">
              <%= feature_meta['display_name'] || feature_name.humanize %>
            </span>
            <% if feature_meta['description'].present? %>
              <p class="mt-1 text-xs text-slate-500"><%= feature_meta['description'] %></p>
            <% end %>
            <% if feature_meta['category'].present? || feature_meta['tier'].present? %>
              <div class="mt-2 flex gap-2">
                <% if feature_meta['category'].present? %>
                  <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                    <%= feature_meta['category'].humanize %>
                  </span>
                <% end %>
                <% if feature_meta['tier'].present? %>
                  <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800 rounded-full">
                    <%= feature_meta['tier'].humanize %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
          <span class="text-green-600 ml-3">
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </span>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="flex items-center p-4 text-sm text-slate-500 bg-slate-50 rounded-lg border border-slate-200">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
      </svg>
      No custom features enabled
    </div>
  <% end %>
</div>
