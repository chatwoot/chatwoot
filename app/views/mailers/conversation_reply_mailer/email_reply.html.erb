<% if @message.content %>
  <%= ChatwootMarkdownRenderer.new(@message.outgoing_content).render_message %>
<% end %>
<% if @message.content_attributes.present? && @message.content_attributes[:signature].present? %>
  <br />
  <br />
  <p>--</p>
  <br />
  <%= @message.content_attributes[:signature].html_safe %>
<% end %>
<% if @large_attachments.present? %>
  <p>Attachments:</p>
  <% @large_attachments.each do |attachment| %>
    <p><a href="<%= attachment.file_url %>" target="_blank"><%= attachment.file.filename.to_s %></a></p>
  <% end %>
<% end %>
<p style="font-size: 1px"><%= Time.current  %></p> <%# Make sure Gmail not Trim to display the email content %>
