<p><%= t('.greeting', name: @resource.name) %></p>

<% account_user = @resource&.account_users&.first %>

<% if account_user&.inviter.present? && @resource.unconfirmed_email.blank? %>
  <p><%= t('.invitation_info', inviter_name: account_user.inviter.name, account_name: account_user.account.name, brand_name: (global_config['BRAND_NAME'] || 'Chatwoot')) %></p>
<% end %>

<% if @resource.confirmed? %>
  <p><%= t('.login_info', brand_name: (global_config['BRAND_NAME'] || 'Chatwoot')) %></p>
<% else %>
  <% if account_user&.inviter.blank? %>
  <p>
    <%= t('.welcome_info', brand_name: (global_config['BRAND_NAME'] || 'Chatwoot')) %>
  </p>
  <% end %>
  <p><%= t('.activation_request') %></p>
<% end %>


<% if @resource.unconfirmed_email.present? %>
  <p><%= link_to t('.confirm_account'), frontend_url('auth/confirmation', confirmation_token: @token), class: 'btn' %></p>
<% elsif @resource.confirmed? %>
  <p><%= link_to t('.login_account'), frontend_url('auth/sign_in'), class: 'btn' %></p>
<% elsif account_user&.inviter.present? %>
  <p><%= link_to t('.confirm_account'), frontend_url('auth/password/edit', reset_password_token: @resource.send(:set_reset_password_token)), class: 'btn' %></p>
<% else %>
  <p><%= link_to t('.confirm_account'), frontend_url('auth/confirmation', confirmation_token: @token), class: 'btn' %></p>
<% end %>