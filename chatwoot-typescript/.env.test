# Test Environment Configuration
NODE_ENV=test
PORT=3001
APP_NAME=Chatwoot Test
FRONTEND_URL=http://localhost:3001
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chatwoot_test
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_POOL_SIZE=5

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_TLS=false

# Authentication & Security
JWT_SECRET=test-jwt-secret-for-testing-only
JWT_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=1d
SESSION_SECRET=test-session-secret-for-testing-only

# Rate Limiting (disabled for tests)
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=1000

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3001

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./test/tmp/storage

# Email Configuration (disabled for tests)
SMTP_ENABLED=false

# Logging (minimal for tests)
LOG_LEVEL=error
LOG_FILE_ENABLED=false

# Background Jobs
BULL_BOARD_ENABLED=false

# WebSocket
WEBSOCKET_ENABLED=false

# Feature Flags (all enabled for testing)
FEATURE_CUSTOM_ATTRIBUTES=true
FEATURE_CAMPAIGNS=true
FEATURE_AUTOMATIONS=true
FEATURE_MACROS=true
FEATURE_AGENT_BOTS=true
FEATURE_SLA=true

# Encryption
ENCRYPTION_KEY=test-encryption-key-32-chars!!

# Integrations (disabled for tests)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Analytics (disabled for tests)
SENTRY_DSN=

# Pusher (disabled for tests)
PUSHER_ENABLED=false

# Stripe (disabled for tests)
STRIPE_ENABLED=false

# Installation
INSTALLATION_NAME=Chatwoot Test
INSTALLATION_ENV=test
