# Application
NODE_ENV=development
PORT=3000
APP_NAME=Chatwoot
FRONTEND_URL=http://localhost:3000
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chatwoot
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./storage
# AWS S3 (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_S3_ENDPOINT=

# Email Configuration
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=support@chatwoot.com
SMTP_FROM_NAME=Chatwoot Support

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Background Jobs
BULL_BOARD_ENABLED=true
BULL_BOARD_PATH=/admin/queues

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/cable

# Integrations - Slack
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_VERIFICATION_TOKEN=

# Integrations - Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_VERIFY_TOKEN=

# Integrations - WhatsApp
WHATSAPP_CLOUD_API_ACCESS_TOKEN=
WHATSAPP_CLOUD_API_PHONE_NUMBER_ID=
WHATSAPP_CLOUD_API_VERIFY_TOKEN=

# Integrations - Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Analytics & Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
FEATURE_CUSTOM_ATTRIBUTES=true
FEATURE_CAMPAIGNS=true
FEATURE_AUTOMATIONS=true
FEATURE_MACROS=true
FEATURE_AGENT_BOTS=true
FEATURE_SLA=true

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# OpenAI (for AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Pusher (for real-time events)
PUSHER_ENABLED=false
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=mt1

# Stripe (for billing)
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Super Admin
SUPER_ADMIN_EMAIL=admin@chatwoot.com
SUPER_ADMIN_PASSWORD=

# Installation
INSTALLATION_NAME=Chatwoot
INSTALLATION_ENV=development
