# Railway Environment Variables
# Copy these to Railway dashboard

# Rails
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_MAX_THREADS=5

# Security (Railway will generate these)
SECRET_KEY_BASE=${{railway.SECRET_KEY_BASE}}
DEVISE_JWT_SECRET_KEY=${{railway.DEVISE_JWT_SECRET_KEY}}

# Database (Railway PostgreSQL)
DATABASE_URL=${{PostgreSQL.DATABASE_URL}}

# Redis (Railway Redis)  
REDIS_URL=${{Redis.REDIS_URL}}

# App URLs
FRONTEND_URL=${{RAILWAY_STATIC_URL}}
HELPCENTER_URL=${{RAILWAY_STATIC_URL}}

# Disable services not needed for basic deployment
ENABLE_ACCOUNT_SIGNUP=true
FORCE_SSL=true

# Email (configure with your provider)
MAILER_SENDER_EMAIL=noreply@yourdomain.com
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# Storage (use Railway volumes or S3)
ACTIVE_STORAGE_SERVICE=local

# Disable external services for basic setup
FB_VERIFY_TOKEN=
FB_APP_SECRET=
FB_APP_ID=
TWITTER_APP_ID=
SLACK_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_ID=