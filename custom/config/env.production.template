# CommMate Production Configuration Template
# Copy this file to .env.production in the root directory

# App Configuration
APP_NAME=CommMate
BRAND_NAME=CommMate
BRAND_URL=https://commmate.com
INSTALLATION_ENV=docker
RAILS_ENV=production
NODE_ENV=production

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=commmate_production
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=change-this-password

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=change-this-redis-password

# Rails
SECRET_KEY_BASE=generate-with-rails-secret
RAILS_MAX_THREADS=5

# Frontend
FRONTEND_URL=https://commmate.com

# Email (SMTP)
SMTP_ADDRESS=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-key
SMTP_DOMAIN=commmate.com
MAILER_SENDER_EMAIL=noreply@commmate.com

# Storage
ACTIVE_STORAGE_SERVICE=local

# Features
ENABLE_ACCOUNT_SIGNUP=true
DIRECT_UPLOADS_ENABLED=true
HIDE_BRANDING=true

